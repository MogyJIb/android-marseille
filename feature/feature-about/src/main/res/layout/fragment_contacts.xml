<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:clipToPadding="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_16dp"
        android:paddingLeft="@dimen/_16dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/contacts_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contacts_address"
            android:layout_marginTop="@dimen/_8dp"
            android:textSize="@dimen/_17sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/contacts_map"
                android:scaleType="centerCrop"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/contacts_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contacts_title"
            android:layout_marginTop="@dimen/_16dp"
            android:textSize="@dimen/_18sp"
            android:fontFamily="sans-serif-medium"
            />

        <TextView
            android:id="@+id/contacts_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contacts_phone"
            android:layout_marginTop="@dimen/_4dp"
            android:textSize="@dimen/_20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24dp"
            android:layout_marginBottom="@dimen/_24dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/instagram_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_instagram"
                android:layout_margin="@dimen/_4dp"

                app:backgroundTint="@color/accent"
                app:tint="@color/primary"
                app:fabSize="mini"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/odnoklassniki_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4dp"
                android:src="@drawable/icon_odnoklassniki"

                app:backgroundTint="@color/accent"
                app:tint="@color/primary"
                app:fabSize="mini"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/vkontakte_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4dp"
                android:src="@drawable/icon_vkontacte"

                app:backgroundTint="@color/accent"
                app:tint="@color/primary"
                app:fabSize="mini"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
